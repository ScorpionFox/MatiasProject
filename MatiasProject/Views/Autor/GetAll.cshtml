@model IEnumerable<MatiasProject.Models.Domain.Autor>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark"href="/Autor/Add">Dodaj kolejny</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h1>Autorzy</h1>

            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Autor</th>
                        <th>Akcja</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameAutor</td>
                            <td>
                                <a href="/Autor/Update?id=@item.Id" class="btn btn-success">Edytuj</a>
                                <a href="/Autor/Delete?id=@item.Id" class="btn btn-danger" onclick="return window.confirm('Czy chcesz usunąć ten rekord?')">Usuń</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

