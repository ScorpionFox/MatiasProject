@model MatiasProject.Models.Domain.Autor
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>Dodaj Autora</h1>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="NameAutor">Autor Name(Nazwa autora) *</label>
                    <input type="text" class="form-control" asp-for="NameAutor" />
                    <span asp-validation-for="NameAutor" class="text-danger"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Zapisz</button>
                    <a href="/Autor/GetAll" class="btn btn-primary">Lista autorów</a>
                </div>
            </form>
        </div>
    </div>
</div>

