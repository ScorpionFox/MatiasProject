@model IEnumerable<MatiasProject.Models.Domain.Wydawnictwo>
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Wydawnictwo/Add">+ Dodaj kolejne wydawnictwo</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h1>Wydawnictwa</h1>

            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Nazwa</th>
                        <th>Akcja</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NameWydawnictwo</td>
                            <td>
                                <a href="/Wydawnictwo/Update?id=@item.Id" class="btn btn-success"><i class="bi bi-pen"></i> Edytuj</a>
                                <a href="/Wydawnictwo/Delete?id=@item.Id" class="btn btn-danger" onclick="return window.confirm('Czy chcesz usunąć ten rekord?')"><i class="bi bi-trash"></i> Usuń</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

